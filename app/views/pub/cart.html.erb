<h1>Seu carrinho de compras</h1>

<ul id="cart_items">
  <%= render partial: 'cart_item', collection: @cart.items %>
</ul>

<p>
  Total: <span class="book_value" id="cart_total"> <%= number_to_currency(@cart.total) %> </span>
</p>

<%= link_to 'Fecher pedido', close_order_path, data: { confirm: 'Tem certeza?' } %>

<%= link_to 'Continuar comprando', root_path %>

<script type='text/javascript' >
  (new Bookstore.Cart()).fire();
</script>
